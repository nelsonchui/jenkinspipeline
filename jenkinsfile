pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo "Build stage in progress"
                echo "--- download latest source ---"
                sh "rm -rf idrs_poc"
                sh "git init"
                sh "git clone https://github.com/nelsonchui/idrs_poc.git"
                sh "cd idrs_poc"
                sh "ls -al"
            }
        }
        stage('deploy') {
            steps {
                echo "Deploy stage in progress"
            }
        }
        stage('test') {
            steps {
                echo "Test stage in progress"
            }
        }
        stage('release') {
            steps {
                echo "Release stage in progress"
            }
        }
    }
}
